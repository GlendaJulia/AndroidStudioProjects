<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/x1"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_alignTop="@+id/x2"
        android:layout_toStartOf="@+id/textView4"
        android:background="@drawable/captura2" />

    <EditText
        android:id="@+id/Lab"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Lab"
        android:background="@android:color/background_light"
        android:gravity="center_vertical"
        android:text=" Promedio de Laboratorios:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/P1"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/P3"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/P4"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/P3"
        android:layout_marginStart="-90dp"
        android:layout_toEndOf="@+id/Lab"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/P2"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/P3"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/textView2"
        android:background="@android:color/background_light"
        android:gravity="center_vertical"
        android:text="Practica 4:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/P2"
        android:background="@android:color/background_light"
        android:gravity="center_vertical"
        android:text="Practica 2:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/P3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="101dp"
        android:background="@android:color/background_light"
        android:gravity="center_vertical"
        android:text="Practica 3:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:background="#d579ff"
        android:gravity="center_vertical"
        android:text="Notas de Laboratorios:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x2"
        android:layout_width="145dp"
        android:layout_height="138dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView10"
        android:layout_marginEnd="32dp"
        android:background="@drawable/aprobado" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/btnCalcular"
        android:layout_marginTop="-194dp"
        android:background="#d579ff"
        android:gravity="center_vertical"
        android:text="Resultado:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/P3"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="numberSigned"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:background="@android:color/background_light"
        android:gravity="center_vertical"
        android:text="Practica 1:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|center_horizontal"
        android:text="Programacion en Moviles"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/textView3"
        android:background="#d579ff"
        android:gravity="center_vertical"
        android:text="Notas de Practicas"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="201dp"
        android:text="CALCULAR" />

</RelativeLayout>