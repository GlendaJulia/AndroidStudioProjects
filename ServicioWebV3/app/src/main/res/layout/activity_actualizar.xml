<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actualizar">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="Actualizar Usuario"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Nombre:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtNombre2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Clave :"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtClave2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Estado :"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/cmbEstado"
        android:layout_width="match_parent"
        android:layout_height="51dp" />

    <Button
        android:id="@+id/btnGuardar2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="actualizarUsuario"
        android:text="Actualizar"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnRegresar2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="cancelar"
        android:onClick="atras"
        />
</LinearLayout>